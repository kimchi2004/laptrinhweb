@model _19T1021020.DomainModels.Product
@{
    ViewBag.Title = "Xóa Mặt Hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/delete" method="post">
            <input type="hidden" name="id" value="@Model.ProductID" />
            <div class="form-group">
                <label class="control-label col-sm-2"> Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"> Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"> @Model.Price</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"> Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <img src="~/Photos/@Model.Photo" class="img img-bordered" style="width:200px" alt="@Model.ProductName" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                        Đồng ý xóa
                    </button>

                    <a href="~/product" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>
