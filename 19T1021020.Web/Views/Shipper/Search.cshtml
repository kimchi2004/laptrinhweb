@model _19T1021020.Web.Models.ShipperSearchOutput

@{
    Layout = null;
}
<p> Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> bản ghi trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Họ tên người giao hàng</th>
            <th>Số điện thoại</th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {

            <tr>
                <td>@item.ShipperName</td>
                <td>@item.Phone</td>
                <td class="text-right">
                    <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-success" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger" title="Xóa"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a onclick="doSearch(@i)" href="javascript:">@i</a></li>
            }
        }
    </ul>
</div>
