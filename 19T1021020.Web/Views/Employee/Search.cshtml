@model _19T1021020.Web.Models.EmployeeSearchOutput

@{
    Layout = null;
}

<p> Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> bản ghi trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang</p>
<div class="row">
    @foreach (var item in Model.Data)
    {
        <div class="col-sm-3">
            <div class="text-center">
                <div class="card" style="border: thin;border-style: solid; margin-bottom:10px;height:450px">
                    <p class="title"></p>
                    <img src="Photos/@item.Photo" alt="employee" style="width: 100%; height: 210px; object-fit: cover">
                    <h3>@item.FirstName @item.LastName</h3>
                    <p class="title">@item.BirthDate.ToString("dd/MM/yyyy")</p>
                    <p class="title" style="display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;overflow:hidden;height:60px">@item.Notes</p>
                    <p>@item.Email</p>
                    <td>
                        <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-success" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                        <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-danger" title="Xóa"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                    <p class="title"></p>
                </div>
            </div>
        </div>
    }
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a onclick="doSearch(@i)" href="javascript:">@i</a></li>
            }
        }
    </ul>
</div>
