
@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-danger">
    
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150" src="~/Photos/@Model.Photo">
                    </div>
                </div>
                <div class="col-md-7 border-right">
                    <div class="p-3 py-5">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2">Họ đệm:</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.LastName</p>
                                </div>
                            </div>
                        </form>

                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2">Tên:</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.FirstName</p>
                                </div>
                            </div>
                        </form>

                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2">Ngày sinh:</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.BirthDate</p>
                                </div>
                            </div>
                        </form>

                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2">Ghi chú:</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.Notes</p>
                                </div>
                            </div>
                        </form>

                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2">Email:</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.Email</p>
                                </div>
                            </div>
                        </form>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i> Đồng ý xóa
                                </button>
                                <a href="~/Employee" class="btn btn-warning">
                                    <i class="glyphicon glyphicon-circle-arrow-left"></i>
                                    Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>

