@model _19T1021020.Web.Models.CustomerSearchOutput
@{
    Layout = null;
}
<p> Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> bản ghi trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Tên giao dịch</th>
            <th>Địa chỉ</th>
            <th>Thành phố</th>
            <th>Mã bưu chính</th>
            <th>Quốc gia</th>
            <th>Email</th>
            <th>Mật khẩu</th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {

            <tr>
                <td>@item.CustomerName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td>@item.Country</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td class="text-right">
                    <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-success" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-danger" title="Xóa"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
    <li><a onclick="doSearch(@i)" href="javascript:">@i</a></li>
            }
        }
    </ul>
</div>


