@model _19T1021020.DomainModels.Category
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CategoryID)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })
            <div class="form-group">
                <label for="CategoryName">Tên loại hàng:</label>
                @Html.TextBoxFor(m => m.CategoryName,
                        new { @class = "form-control", @placeholder = "Nhập tên loại hàng", @autufocus = "autufocus" })
            </div>
            <div class="form-group">
                <label for="Description">Mô tả:</label>
                @Html.TextBoxFor(m => m.Description,
                       new { @class = "form-control", @placeholder = "Nhập mô tả", @autufocus = "autufocus" })
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning">
                        <i class="glyphicon glyphicon-circle-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

